# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development  # Options: development, testing, production

# Security
SECRET_KEY=your-super-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database
DATABASE_URL=sqlite:///app.db  # Example: postgresql://user:password@localhost:5432/dbname

# JWT Settings
JWT_ACCESS_TOKEN_EXPIRES=3600  # Time in seconds (1 hour)

# Admin User (Optional)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-admin-password

# Optional: Additional Security Settings
BCRYPT_LOG_ROUNDS=12  # Higher number = more secure but slower 